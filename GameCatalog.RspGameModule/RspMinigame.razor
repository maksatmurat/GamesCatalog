@page "/rsp"


<div class="row text-center">
    <div class="col">
        <h1 class="text-success">RSP Minigama</h1>
    </div>
</div>

<div class="row text-center">
    <div class="col mb-5 justify-content-center">
        <img src="RspGame/images/paper.png" class="general-image" alt="paper" />
    </div>
</div>


<div class="row text-center">
    <div class="col mb-5 justify-content-center">
        <button class="btn btn-primary">
            Start New Game
        </button>
    </div>
</div>

<div class="row text-center justify-content-around">
    <div class="col">
        <button class="btn btn-primary">
            <img src="@path" class="general-image hovered-image" alt="rock" />
        </button>
        <button class="btn btn-primary">
            <img src="RspGame/images/scissors.png" class="general-image hovered-image" alt="paper" />
        </button>
        <button class="btn btn-primary">
            <img src="RspGame/images/paper.png" class="general-image hovered-image" alt="scissors" />
        </button>
    </div>
</div>


@code{

    string path = "RspGame/images/rock.png";
}

<style>
    .general-image{
        height:100px;
        width:auto;
    }
</style>